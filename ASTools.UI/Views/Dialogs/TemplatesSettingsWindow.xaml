<mah:MetroWindow x:Class="ASTools.UI.TemplatesSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="SETTINGS" Height="300" Width="400"
        WindowStyle="None"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Templates list -->
        <DataGrid Name="repositoriesListGrid"
                  Grid.Row="0"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="RepositoriesListGrid_SelectionChanged"
                  Loaded="RepositoriesListGrid_Loaded">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Path" Width="*" Binding="{Binding Path}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- selectedRepositoryPath text box -->
        <TextBox    Name="selectedRepositoryPath"
                    Grid.Row="1"
                    Margin="10"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
            <!-- Remove button -->
            <Button Name="removeButton"
                    Content="Remove"
                    Margin="10"
                    Click="RemoveButton_Click" />

            <!-- New button -->
            <Button Name="newButton"
                    Content="New"
                    Margin="10"
                    Click="NewButton_Click" />
        </StackPanel>
    </Grid>
</mah:MetroWindow>
